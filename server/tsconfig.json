{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",    
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
